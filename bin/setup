#!/bin/bash

release=${1:-"tag"}

if [ "$release" == "tag" ]
  then
    git fetch
    tag=$(git describe --tags "$(git rev-list --tags --max-count=1)")
    git checkout "$tag"
    git pull
fi

if [ "$release" != "tag" ]
  then
    git fetch
    git checkout "$release"
    git pull
fi

yarn install --frozen-lockfile
yarn build
